<div class="data-form">
    <form action="/users/create" method="POST">
        <h2>Luo uusi käyttäjä:</h2>
        <p>
        <label for="inputFirstName">Etunimi:</label>
        <input type="text" name="first" id="inputFirstName" placeholder="Etunimi">
        </p>

        <p>
        <label for="inputLastName">Sukunimi:</label>
        <input type="text" name="last" id="inputlastName" placeholder="Sukunimi">
        </p>

        <p>
        <label for="inputNickName">Pelaajanimi:</label>
        <input type="text" name="nick" id="inputNickName" placeholder="Pelaajanimi">
        </p>

        <p>
        <label for="inputPassword">Salasana:</label>
        <input type="text" name="password" id="inputPassword" placeholder="Salasana">
        </p>

        <button type="submit">Tallenna</button>
    </form>
</div>